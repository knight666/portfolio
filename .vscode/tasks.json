{
	"version": "2.0.0",
	// shared

	"presentation": {
		"reveal": "always",
		"panel": "dedicated",
		"clear": false,
	},

	// tasks

	"tasks": [
		// building

		{
			"label": "Vite: Dev Server",
			"type": "shell",
			"command": "npx",
			"args": [
				"vite",
				"dev",
				"--",
				"--open"
			],
			"group": {
				"kind": "build",
				"isDefault": true,
			},
		},
		{
			"label": "Vite: Build",
			"type": "shell",
			"command": "npx",
			"args": [
				"vite",
				"build",
			],
			"group": {
				"kind": "build",
				"isDefault": true,
			},
		},
		{
			"label": "Vite: Preview",
			"type": "shell",
			"command": "npx",
			"args": [
				"vite",
				"preview",
			],
			"group": {
				"kind": "build",
				"isDefault": true,
			},
		},
	]
}